<Window x:Class="WpfPomodoro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Window.Background="Transparent" AllowsTransparency="True" WindowStyle="None" >
    <Grid Background="Transparent">
        <Image Source="img/tomato.png"></Image>
        <TextBlock Name="time" Margin="196,122,197.8,173.4" Foreground="White" FontSize="42" FontFamily="Consolas" Text="{Binding Path=Counter}">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="3" ShadowDepth="3" Opacity="0.5"/>
            </TextBlock.Effect>
        </TextBlock>
        <Button Click="Button_Click_1" Margin="145,228,340.8,100.4">
            Start
        </Button>
    </Grid>
</Window>
